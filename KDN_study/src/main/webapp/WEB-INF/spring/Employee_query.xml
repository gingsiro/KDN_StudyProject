<mapper namespace="employee">
	<select id="search" parameterType="int" resultType="employee">
		select *
		from employee
		where empno = #{ empno }
	</select>
	<select id="searchAll" parameterType="pagebean" resultType="employee">
		select *
		from employee
		<where>
			<if test="word != null">
				<choose>
					<when test="key == 'empno'">
						empno = #{ word } 
					</when>
					<when test="key == 'ename'">
						ename like '%'||#{ word }||'%' 
					</when>
					<when test="word == 'dept'">
						dept like '%'||#{ word }||'%'
					</when>
				</choose>
			</if>
		</where>
	</select>
	
	
